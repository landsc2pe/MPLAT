<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/reviewDetail_ivImageIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/reviewDetail_tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="[모란] 김과장고깃집 모란점"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/reviewDetail_tvReward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="매장 추천 메뉴 제공: 스페셜모듬(삼겹+목살..)"
                        android:maxLines="2"/>
                    <TextView
                        android:id="@+id/reviewDetail_tvReviewMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SNS 홍보(인스타그램)"/>
                    <TextView
                        android:id="@+id/reviewDetail_tvJoinInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1명 선정(현재 2명 신청)"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/reviewDetail_tvStep1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="리뷰 신청\n6월14일\n~6월19일"
                    android:textSize="12sp"
                    android:textColor="@color/primaryFont"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border_padding0"
                    android:layout_marginRight="4dp" />
                <TextView
                    android:id="@+id/reviewDetail_tvStep2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="리뷰어 선정\n6월14일\n~6월19일"
                    android:textSize="12sp"
                    android:textColor="@color/primaryFont"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border_padding0"
                    android:layout_marginRight="4dp" />
                <TextView
                    android:id="@+id/reviewDetail_tvStep3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="리뷰 등록\n6월14일\n~6월19일"
                    android:textSize="12sp"
                    android:textColor="@color/primaryFont"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border_padding0" />
                <TextView
                    android:id="@+id/reviewDetail_tvStep4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="리뷰 종료\n6월14일\n~6월19일"
                    android:textSize="12sp"
                    android:textColor="@color/primaryFont"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border_padding0"
                    android:layout_marginLeft="4dp" />
            </LinearLayout>
            <!-- 게임 다운로드 공유하기-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/reviewDetail_tvRegist"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="리뷰 신청"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/primary"
                    android:textColor="@color/white"
                    android:padding="1dp"
                    android:layout_marginRight="1dp"/>
                <TextView
                    android:id="@+id/reviewDetail_tvShare"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="공유하기"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:padding="1dp"
                    android:layout_marginLeft="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/reviewDetail_tvTab1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리뷰 소개"
                    android:textSize="16sp"
                    android:background="@drawable/border_n_primary"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="1dp"/>
                <TextView
                    android:id="@+id/reviewDetail_tvTab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="신청자 명단"
                    android:textSize="16sp"
                    android:background="@drawable/border_n_default"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"/>
            </LinearLayout>
            <!-- 미션 참여 방법 -->
            <ScrollView
                android:id="@+id/reviewDetail_svTab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:background="@drawable/border">
                <LinearLayout
                    android:id="@+id/reviewDetail_llTab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/reviewDetail_ivTab1Image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="제공내역"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/reviewDetail_tvTab1Reward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="15sp"
                        android:textColor="@color/primaryFont"/>
                    <!-- 경계선 -->
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/primaryBorder"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="검색 키워드(제목,본문,키워드,#태그에 필수 삽입)"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/reviewDetail_tvTab1Keyword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="15sp"
                        android:textColor="@color/primaryFont"/>
                    <!-- 경계선 -->
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/primaryBorder"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="리뷰 안내 (반드시 지켜주세요)"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/reviewDetail_tvInfomation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="15sp"/>
                    <!-- 경계선 -->
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/primaryBorder"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="리뷰 작성 가이드 라인"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/reviewDetail_tvTab1Guideline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="15sp"/>
                    <Button style="@style/Widget.AppCompat.Button.Borderless"
                        android:id="@+id/reviewDetail_btnDownloadGuide"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="가이드 라인 다운로드"
                        android:textSize="16sp"
                        android:background="@color/browngray"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/reviewDetail_tvJoinMethodInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="리뷰 참여 방법 안내"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/reviewDetail_tvTab1Beware"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="설명입니다1111. 설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다."
                        android:textSize="14sp"/>
                    <fragment
                              xmlns:map="http://schemas.android.com/apk/res-auto"
                              android:id="@+id/map"
                              android:name="com.google.android.gms.maps.SupportMapFragment"
                              android:layout_width="match_parent"
                              android:layout_height="200dp"/>
                    <TextView
                        android:id="@+id/reviewDetail_tvTab1JoinBeware"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="설명입니다1111. 설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다."
                        android:textSize="14sp"/>
                </LinearLayout>
            </ScrollView>
            <!-- 앱 정보 -->
            <ScrollView
                android:id="@+id/reviewDetail_svTab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@drawable/border">
                <LinearLayout
                    android:id="@+id/reviewDetail_llTab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--WebView
                        android:id="@+id/reviewDetail_wvYoutube"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"></WebView-->
                    <!--TextView
                        android:id="@+id/reviewDetail_tvTab2Desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="설명입니다22222. 설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다.설명입니다."
                        android:textSize="14sp"/-->
                    <ListView
                        android:id="@+id/reviewDetail_lvTab2listview"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>